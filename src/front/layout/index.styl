@require 'guide.styl';

$main-color-bg = #f8f7f5;

body {
    background-color: $main-color-bg;
}

.Root {
    box-sizing: border-box;
    margin: 0 auto;
    padding: 10px;
    border: none;
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    gap: 10px;
    min-height: 100vh; 
}

.Item {

}

.PairSelectors {
    display: flex;
}

.Select {
    flex: 0 1 50%;
}

.ListPanel {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    width: 100%;
}

.List {
    display: block;
    box-sizing: border-box;
    margin: 15px;
    padding: 0 15px;
    border: 1px solid $color-light-gray;
    border-top-width: 0;
    border-bottom-width: 0;
    overflow: auto;
    flex-grow: 1;
}

.ListItem {
    display: block;
    box-sizing: border-box;
    margin: 0 auto;
    padding: 5px;
    list-style: none;
    border: 0;
}

.ListHeader {
    font-size: 18px;
    font-weight: bold;
    margin: 0;
    padding: 5px;
}

.Header {
    font-size: 22px;
    font-weight: bold;
    margin: 5px 0;
}

.ListPanel {
    transition: 
        min-height ease 0.5s,
        height ease 0.5s;
    height: 60vw;
    min-height: 300px;
    display: flex;
    flex-direction: column;
}

.ListPanel_collapsed {
    height: 20px;
    min-height: 20px;
    align-items: center;
    justify-content: center;
}

@media screen and (min-width: $mobile-width) {
    .Root {
        width: 800px;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: flex-start;
    }

    .List {
        max-height: none;
        padding: 0;
        margin: 10px 0;
        border-width: 0;
        max-height: none;
    }

    .ListPanel {
        padding: 20px;
        height: auto;
    }

    .ListPanelCt {
        flex: 0 0 50%;
    }

    .PairSelectors,
    .Top {
        flex: 0 0 100%;
    }
}